<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BottomNavigationWithDrawerMenu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BottomNavigationWithDrawerMenu" parent="Base.Theme.BottomNavigationWithDrawerMenu" />


    <style name="Theme.BlockIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlockIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- App bar overlay style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/design_default_color_primary</item>
    </style>

    <!-- Popup overlay style -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Toolbar style -->
    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/design_default_color_primary</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:background">@color/your_drawer_background_color</item>
    </style>

</resources>